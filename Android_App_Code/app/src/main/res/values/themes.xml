<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StudyBuddy" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/editTextColorNotOnFocus</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_secondary</item>
        <item name="colorSecondaryVariant">@color/accent_secondary</item>
        <item name="colorOnSecondary">@color/primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/accent_primary</item>

        <item name="actionBarItemBackground">@color/textPrimary</item>
    </style>
    <style name="animation">
        <item name="android:windowAnimationStyle">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="button_dashboard_primary_text_style" parent="TextAppearance.AppCompat.Button">
        <item name="fontFamily">@font/ibmplexsansmedium</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button_dashboard_secondary_text_style" parent="TextAppearance.AppCompat.Button">
        <item name="fontFamily">@font/ibmplexsanssemibold</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="page_heading">
        <item name="fontFamily">@font/ibmplexsanssemibold</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">18sp</item>
